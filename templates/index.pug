        .container
          h2.rewiews__title Отзывы о нас
          .reviews__wrapper
            .reviews__block
              img.reviews__image(src='img/tattoo-man-mobile@1x.jpg', alt='Трэвис Баркер', width='50', height='49')
              .reviews__block
                h3.reviews__name Трэвис Баркер
